<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_340"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:text="From date"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:background="@color/colorBackGround"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/year_month"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"/>

    <ImageView
        android:id="@+id/pre"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintTop_toTopOf="@+id/year_month"
        app:layout_constraintBottom_toBottomOf="@id/year_month"
        app:layout_constraintStart_toStartOf="@id/year_month"
        android:src="@mipmap/left_select"
        android:scaleType="center"/>

    <ImageView
        android:id="@+id/next"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintTop_toTopOf="@+id/year_month"
        app:layout_constraintBottom_toBottomOf="@id/year_month"
        app:layout_constraintEnd_toEndOf="@id/year_month"
        android:src="@mipmap/left_select"
        android:rotation="180"
        android:scaleType="center"/>
    <com.haibin.calendarview.CalendarLayout
        android:id="@+id/calendarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/year_month"
        android:background="#fff"
        android:orientation="vertical"
        app:calendar_content_view_id="@+id/recyclerView">

        <com.haibin.calendarview.CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            app:calendar_padding="10dp"
            app:month_view="com.home.glx.uwallet.selfview.SimpleMonthView"
            app:week_bar_view="com.home.glx.uwallet.selfview.EnglishWeekBar"
            app:calendar_height="46dp"
            app:current_month_lunar_text_color="#CFCFCF"
            app:current_month_text_color="#333333"
            app:min_year="2016"
            app:other_month_text_color="#e1e1e1"
            app:scheme_text_color="@color/pay_text_gray"
            app:scheme_theme_color="@color/pay_text_gray"
            app:selected_text_color="#fff"
            app:selected_theme_color="@color/colorBackGround"
            app:week_background="#fff"
            app:week_text_color="#111"
            app:week_view="com.home.glx.uwallet.selfview.SimpleWeekView"
            app:year_view_day_text_color="#333333"
            app:day_text_size="@dimen/sp_12"
            app:week_text_size="@dimen/sp_12"
            app:year_view_day_text_size="9sp"
            app:year_view_month_text_color="#ff0000"
            app:year_view_month_text_size="20sp"
            app:year_view_scheme_color="#f17706"
            />
        ã€€
    </com.haibin.calendarview.CalendarLayout>

    <TextView
        android:id="@+id/ok"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendarLayout"
        android:text="OK"
        android:textColor="@color/colorBackGround"
        android:textSize="@dimen/sp_14"
        android:gravity="center"/>

    <TextView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_50"
        android:paddingRight="@dimen/dp_20"
        app:layout_constraintEnd_toStartOf="@+id/ok"
        app:layout_constraintTop_toBottomOf="@+id/calendarLayout"
        android:text="CANCEL"
        android:textColor="#CACED5"
        android:textSize="@dimen/sp_14"
        android:gravity="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>