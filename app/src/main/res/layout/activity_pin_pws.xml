<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/id_back"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_23"
            android:paddingTop="@dimen/dp_16"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_10"
            android:src="@mipmap/back_icon" />

        <TextView
            android:id="@+id/id_title"
            style="@style/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Set up a PIN"
            android:textColor="@color/black"
            android:visibility="gone" />

    </RelativeLayout>

    <TextView
        android:id="@+id/id_top_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_70"
        android:gravity="center"
        android:text="@string/set_4pin"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_18" />

    <TextView
        android:id="@+id/pin_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_17"
        android:gravity="center_horizontal"
        android:text="Choose a 4-digit PIN to authorise your payments"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_13" />

    <com.home.glx.uwallet.selfview.PwdEditText_Fenkai
        android:id="@+id/id_pws_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="86dp"
        android:layout_marginTop="@dimen/dp_70"
        android:layout_marginRight="86dp"
        android:inputType="number"
        app:backColor="@color/white"
        app:checkedColor="#d0d0d0"
        app:circle="5dp"
        app:isWaitInput="true"
        app:round="7.5dp"
        app:space="0dp"
        android:digits="0123456789"
        app:textColor="#717171"
        app:textLength="4"
        app:waitInputColor="#CACED5">

        <requestFocus />
    </com.home.glx.uwallet.selfview.PwdEditText_Fenkai>


</LinearLayout>
