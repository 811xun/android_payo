<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="446dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fadingEdge="none"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/close"
                android:layout_width="@dimen/dp_56"
                android:layout_height="@dimen/dp_56"
                android:src="@mipmap/close_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleType="center"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_56"
                android:gravity="center"
                android:layout_marginRight="@dimen/dp_56"
                android:text="OzHarvest"
                android:textSize="18sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/close"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title"
                android:background="@color/color_ebebeb"/>

            <TextView
                android:id="@+id/text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginTop="47dp"
                android:text="Donate 4 meals for $1"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginHorizontal="23dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line"/>

            <TextView
                android:id="@+id/msg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginTop="21dp"
                android:text="OzHarvest is the leading food rescue\norganisation on a mission to ‘Nourish our\nCountry’ by stopping good food from going \nto waste and delivering it to charities that help feed people in need. Every $1 donated allows OzHarvest to deliver two meals to people in need. Payo is committed to donating 200,000 meals, and you can play a part too as a payo-te by donating $1."
                android:lineSpacingExtra="6dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginHorizontal="23dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>