<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_main_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/id_back"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_23"
            android:paddingTop="@dimen/dp_16"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_10"

            android:scaleType="center"
            android:src="@mipmap/back_icon" />

        <TextView
            android:id="@+id/id_title"
            style="@style/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/regist"
            android:visibility="gone" />

    </RelativeLayout>

    <com.home.glx.uwallet.selfview.DampingReboundNestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_23"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:paddingRight="@dimen/dp_23"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/almost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="Letâ€™s get personal"
                android:textColor="@color/text_black"
                android:textSize="26sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:hint="@string/re_t_first_name"
                    app:hintTextAppearance="@style/box">

                    <com.home.glx.uwallet.tools.ChangeLineEdittext
                        android:id="@+id/id_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:background="@drawable/edt_bg_un_selected"
                        android:inputType="text"
                        android:lines="1"
                        android:maxLength="100"
                        android:paddingLeft="0dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:textColor="@android:color/black"
                        android:textColorHint="#717171"
                        android:textSize="17sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_middle_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:hint="@string/re_t_middle_name"
                    app:hintTextAppearance="@style/box">

                    <com.home.glx.uwallet.tools.ChangeLineEdittext
                        android:id="@+id/id_middle_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:background="@drawable/edt_bg_un_selected"
                        android:inputType="text"
                        android:lines="1"
                        android:maxLength="100"
                        android:paddingLeft="0dp"
                        android:paddingTop="14dp"
                        android:paddingBottom="16dp"
                        android:textColor="@android:color/black"
                        android:textColorHint="#717171"
                        android:textSize="17sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:hint="@string/re_t_last_name"
                    app:hintTextAppearance="@style/box">

                    <com.home.glx.uwallet.tools.ChangeLineEdittext
                        android:id="@+id/id_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:background="@drawable/edt_bg_un_selected"
                        android:inputType="text"
                        android:lines="1"
                        android:maxLength="100"
                        android:paddingLeft="0dp"

                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:textColor="@android:color/black"

                        android:textColorHint="#717171"
                        android:textSize="17sp" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:hint="Email"
                    app:hintTextAppearance="@style/box">

                    <com.home.glx.uwallet.tools.ChangeLineEdittext
                        android:id="@+id/id_email"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:background="@drawable/edt_bg_un_selected"
                        android:inputType="text"
                        android:lines="1"
                        android:maxLength="35"
                        android:paddingLeft="0dp"
                        android:paddingTop="13dp"

                        android:paddingBottom="16dp"
                        android:textColor="@android:color/black"
                        android:textColorHint="#717171"
                        android:textSize="17sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:hint="Date of birth (dd/mm/yyyy)"
                    app:hintTextAppearance="@style/box">

                    <com.home.glx.uwallet.tools.ChangeLineEdittext
                        android:id="@+id/id_birthday"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:background="@drawable/edt_bg_un_selected"
                        android:drawableRight="@mipmap/down_arrow"
                        android:paddingLeft="0dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:textColor="@android:color/black"
                        android:textColorHint="#717171"
                        android:textSize="17sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:hint="Gender"
                    app:hintTextAppearance="@style/box">

                    <com.home.glx.uwallet.tools.ChangeLineEdittext
                        android:id="@+id/id_gender"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_52"
                        android:background="@drawable/edt_bg_un_selected"
                        android:drawableRight="@mipmap/down_arrow"
                        android:paddingLeft="0dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:textColor="@android:color/black"
                        android:textColorHint="#717171"
                        android:textSize="17sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:id="@+id/ll_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_post_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18dp"
                            android:hint="Referral / Promo Code"
                            app:hintTextAppearance="@style/box">

                            <com.home.glx.uwallet.tools.ChangeLineEdittext
                                android:id="@+id/post_code"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_53"
                                android:background="@drawable/edt_bg_un_selected"
                                android:maxLength="20"
                                android:paddingLeft="0dp"
                                android:paddingTop="16dp"
                                android:paddingBottom="16dp"
                                android:textColor="@android:color/black"
                                android:textColorHint="#717171"
                                android:textSize="17sp" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <!--android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"-->

                    <LinearLayout
                        android:id="@+id/ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"

                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_optional"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18dp"
                            android:gravity="right"
                            android:hint="Optional"
                            app:hintTextAppearance="@style/box">

                            <com.home.glx.uwallet.tools.ChangeLineEdittext
                                android:id="@+id/optional"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_53"
                                android:background="@drawable/edt_bg_un_selected"
                                android:enabled="false"
                                android:gravity="right|center_vertical"
                                android:paddingLeft="0dp"
                                android:paddingTop="@dimen/dp_16"
                                android:paddingBottom="@dimen/dp_16"
                                android:textColor="#717171"

                                android:textColorHint="#717171"
                                android:textSize="17sp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <CheckBox
                        android:id="@+id/id_protocols"
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:background="@drawable/check3"
                        android:button="@null"
                        android:checked="false"
                        android:textColor="@color/text_black" />

                    <TextView
                        android:id="@+id/proText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="13dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_717171"
                        android:textSize="@dimen/sp_13" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <CheckBox
                        android:id="@+id/id_protocol"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:background="@drawable/check"
                        android:button="@null"
                        android:checked="false"
                        android:textColor="@color/text_black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="@string/read_agreement"
                            android:textColor="@color/text_gray"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/id_protocol_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="@string/read_agreement_new"
                            android:textColor="@color/text_gray" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <CheckBox
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:background="@drawable/check"
                        android:button="@null"
                        android:textColor="@color/text_black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/text_gray" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_53"
                android:layout_marginTop="@dimen/dp_43"
                android:layout_marginBottom="@dimen/dp_30">

                <TextView
                    android:id="@+id/id_regist"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_53"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/btn_hui_jianbian"
                    android:gravity="center"
                    android:text="Next"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_18" />

                <RelativeLayout
                    android:id="@+id/rl_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_53"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/waiting_icon_hui" />
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>

    </com.home.glx.uwallet.selfview.DampingReboundNestedScrollView>

</LinearLayout>
