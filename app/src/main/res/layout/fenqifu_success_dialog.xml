<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fenfiqu_success_background">

    <ImageView
        android:id="@+id/zan"
        android:layout_width="27dp"
        android:layout_height="28dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:scaleType="fitXY"
        android:src="@mipmap/zan" />

    <ImageButton
        android:id="@+id/close"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:padding="@dimen/dp_7"
        android:background="@null"
        android:src="@mipmap/cha" />

    <TextView
        android:id="@+id/id_jine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_33"
        android:layout_below="@+id/zan"
        android:layout_gravity="center_horizontal"
        android:background="@color/transparent"
        android:gravity="center"
        android:text="Congratulations!"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_below="@+id/id_jine"
        android:layout_marginLeft="@dimen/dp_46"
        android:layout_marginTop="15dp"
        android:layout_marginRight="@dimen/dp_46"
        android:layout_marginBottom="27dp"
        android:background="@mipmap/fenqifu_succ">

        <TextView
            android:id="@+id/jine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/transparent"
            android:text="$1000.00"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/avi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/jine"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:background="@color/transparent"
            android:padding="0dp"
            android:text="Available"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="11sp" />
    </RelativeLayout>

</RelativeLayout>
