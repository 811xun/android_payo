                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/repay_all"
                    android:layout_marginTop="@dimen/dp_22"
                    android:orientation="horizontal"
                    android:paddingHorizontal="23dp"
