                        android:orientation="horizontal"
                        android:paddingHorizontal="23dp">

                        <TextView
                            android:id="@+id/pocket_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="Promotion"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/pocket_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$14.50"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/discount_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pocket_ll"
                        android:layout_marginTop="@dimen/dp_22"
                        android:orientation="horizontal"
                        android:paddingHorizontal="23dp">

                        <TextView
                            android:id="@+id/discount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="Discount"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/discount_amounts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/line3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/discount_ll"
                        android:layout_marginLeft="23dp"
                        android:layout_marginTop="@dimen/dp_22"
                        android:layout_marginRight="23dp"
                        android:background="@color/color_ebebeb" />

                    <LinearLayout
                        android:id="@+id/total_paid_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line3"
