<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
   >


    <ImageView
        android:id="@+id/id_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_23"
        android:paddingTop="@dimen/dp_16"
        android:paddingRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_10"
        android:scaleType="center"
        android:src="@mipmap/back_icon" />

    <TextView
        android:id="@+id/id_title"
        style="@style/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_25"
        android:text="Next steps"
        android:textColor="@color/black"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/id_hint"
        style="@style/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_15"

        android:text="Hereâ€™s what most people do first:"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_23"

        android:layout_marginRight="@dimen/dp_23"

        android:orientation="vertical">

        <com.mxy.fpshadowlayout.FpShadowLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_142"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="48dp"
            app:fp_round_corner="fp_corner_leftBottom|fp_corner_rightBottom"
            app:fp_shadowColor="#29000000"
            app:fp_shadowRadius="3dp"
            app:fp_shadowRoundRadius="6dp"
            app:fp_shadowShape="fp_round_rectangle"
            app:fp_shadowSide="fp_bottom">

            <RelativeLayout
                android:id="@+id/instalment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_line_orange_6dp">

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="@dimen/dp_37"
                    android:layout_height="@dimen/dp_37"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_15"
                    android:scaleType="fitXY"
                    android:src="@mipmap/type_fenqifu" />

                <TextView
                    android:id="@+id/instalment_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_13"
                    android:gravity="center"
                    android:text="Get up to $1000 credit"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/instalment_text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/instalment_text"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="To get you started paying with interest-free \n instalments, please connect to your bank."
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_13" />


            </RelativeLayout>

        </com.mxy.fpshadowlayout.FpShadowLayout>

        <TextView
            android:id="@+id/hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="*Please note payo does not affect your credit score or rating."
            android:textColor="@color/colorBackGround"
            android:textSize="@dimen/sp_11" />

        <com.mxy.fpshadowlayout.FpShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_142"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="@dimen/dp_52"
            app:fp_round_corner="fp_corner_leftBottom|fp_corner_rightBottom"
            app:fp_shadowColor="#29000000"
            app:fp_shadowRadius="3dp"
            app:fp_shadowRoundRadius="6dp"
            app:fp_shadowShape="fp_round_rectangle"
            app:fp_shadowSide="fp_bottom">

            <RelativeLayout
                android:id="@+id/bank_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_line_orange_6dp"
                android:paddingHorizontal="@dimen/dp_16">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="@dimen/dp_37"
                    android:layout_height="@dimen/dp_37"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_15"
                    android:scaleType="fitXY"
                    android:src="@mipmap/type_bankcard" />

                <TextView
                    android:id="@+id/bank_card_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_13"
                    android:gravity="center"
                    android:text="Access deals only"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" />


                <TextView
                    android:id="@+id/bank_card_text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bank_card_text"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="No instalments, just discounts.\n Add your card to pay in full."
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_13" />
            </RelativeLayout>

        </com.mxy.fpshadowlayout.FpShadowLayout>


        <TextView
            android:id="@+id/skip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_60"
            android:text="Skip and explore the app"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/view_btn_32orange"
            android:text="Skip"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="gone" />
    </LinearLayout>


</LinearLayout>