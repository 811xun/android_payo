<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/id_cancel"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="@string/cancel"
            android:textColor="@color/text_gray"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/select_please"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/please_choice"
            android:textColor="@color/text_black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/id_sure"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:text="Done"
            android:textColor="@color/black"
            android:textSize="17sp" />

    </RelativeLayout>

    <com.home.glx.uwallet.selfview.choicetime.wheelview.WheelView
        android:id="@+id/choice_list"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/wheel_bg" />

</LinearLayout>
