<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/confirm_pay_bottom_background"
    android:orientation="vertical"
    android:paddingBottom="24dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/close"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:src="@mipmap/back_b"
            android:scaleType="center"/>
        <TextView
            android:id="@+id/instalment_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_50"
            android:text=""
            android:textColor="#322B1E"
            android:textSize="@dimen/sp_20"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CACED5"/>
    <LinearLayout
        android:id="@+id/instalment_flag"
        android:paddingHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/term1"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/circle"/>
            <TextView
                android:id="@+id/week1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_marginLeft="@dimen/dp_14"
                android:text="1st payment"
                android:layout_gravity="center_vertical"
                android:textColor="@color/pay_text_gray"
                android:textSize="@dimen/sp_13"/>
            <TextView
                android:id="@+id/term1_date"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textSize="@dimen/sp_13"
                android:textColor="@color/pay_text_gray"/>
            <TextView
                android:id="@+id/term1_money"
                android:layout_marginLeft="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text=""
                android:textSize="@dimen/sp_13"
                android:textColor="@color/pay_text_gray"/>
        </LinearLayout>

        <com.home.glx.uwallet.selfview.CashlineView
            android:id="@+id/line1"
            android:layout_marginLeft="9dp"
            android:layout_width="1dp"
            android:layout_height="30dp"
            app:dashOrientation="1"
            app:dashWidth="6dp"
            app:lineColor="#C8C4D9"
            app:lineHeight="1dp"
            app:lineWidth="3dp" />

        <LinearLayout
            android:id="@+id/term2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/circle"/>
            <TextView
                android:id="@+id/week2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_gravity="center_vertical"
                android:text="2nd payment"
                android:textColor="@color/pay_text_gray"
                android:textSize="@dimen/sp_13"/>
            <TextView
                android:id="@+id/term2_date"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textSize="@dimen/sp_13"
                android:textColor="@color/pay_text_gray"/>
            <TextView
                android:id="@+id/term2_money"
                android:layout_marginLeft="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text=""
                android:textSize="@dimen/sp_13"
                android:textColor="@color/pay_text_gray"/>
        </LinearLayout>

        <com.home.glx.uwallet.selfview.CashlineView
            android:id="@+id/line2"
            android:layout_marginLeft="9dp"
            android:layout_width="2dp"
            android:layout_height="30dp"
            app:dashOrientation="1"
            app:dashWidth="6dp"
            app:lineColor="#C8C4D9"
            app:lineHeight="1dp"
            app:lineWidth="3dp" />

        <LinearLayout
            android:id="@+id/term3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/circle"/>
            <TextView
                android:id="@+id/week3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_gravity="center_vertical"
                android:text="3rd payment"
                android:textColor="@color/pay_text_gray"
                android:textSize="@dimen/sp_13"/>
            <TextView
                android:id="@+id/term3_date"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textSize="@dimen/sp_13"
                android:textColor="@color/pay_text_gray"/>
            <TextView
                android:id="@+id/term3_money"
                android:layout_marginLeft="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text=""
                android:textSize="@dimen/sp_13"
                android:textColor="@color/pay_text_gray"/>
        </LinearLayout>

        <com.home.glx.uwallet.selfview.CashlineView
            android:id="@+id/line3"
            android:layout_marginLeft="9dp"
            android:layout_width="2dp"
            android:layout_height="30dp"
            app:dashOrientation="1"
            app:dashWidth="6dp"
            app:lineColor="#C8C4D9"
            app:lineHeight="1dp"
            app:lineWidth="3dp" />

        <LinearLayout
            android:id="@+id/term4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/circle"/>
            <TextView
                android:id="@+id/week4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_marginLeft="@dimen/dp_14"
                android:text="4th payment"
                android:layout_gravity="center_vertical"
                android:textColor="@color/pay_text_gray"
                android:textSize="@dimen/sp_13"/>
            <TextView
                android:id="@+id/term4_date"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textSize="@dimen/sp_13"
                android:textColor="@color/pay_text_gray"/>
            <TextView
                android:id="@+id/term4_money"
                android:layout_marginLeft="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text=""
                android:textSize="@dimen/sp_13"
                android:textColor="@color/pay_text_gray"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CACED5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:paddingHorizontal="@dimen/dp_14"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/total_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textSize="@dimen/sp_22"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/total_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:textSize="@dimen/sp_22"
            android:textColor="@color/black"/>
    </LinearLayout>
    <TextView
        android:id="@+id/back"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_width="@dimen/dp_302"
        android:background="@mipmap/btn_green_img"
        android:layout_height="@dimen/dp_85"
        android:text=""
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20"/>
</LinearLayout>