<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_wai"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/id_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_23"
        android:paddingTop="@dimen/dp_16"
        android:paddingRight="@dimen/dp_25"
        android:paddingBottom="@dimen/dp_10"
        android:src="@mipmap/back_icon" />

    <ImageView
        android:id="@+id/iv_jindu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_23"
        android:layout_marginBottom="@dimen/dp_10"
        android:src="@mipmap/oneof4" />

    <com.home.glx.uwallet.selfview.DampingReboundNestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/id_back"
        android:layout_marginTop="25dp"
        android:paddingLeft="@dimen/dp_23"
        android:paddingRight="@dimen/dp_23"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="612dp"
            android:paddingBottom="@dimen/dp_25">

            <TextView
                android:id="@+id/tv_payo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_26"
                android:layout_centerHorizontal="true"
                android:text="Your ID"
                android:textColor="@color/black"
                android:textSize="26sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_payo"
                android:layout_marginTop="44dp"
                android:hint="Select ID type"
                app:hintTextAppearance="@style/box">

                <com.home.glx.uwallet.tools.ChangeLineEdittext
                    android:id="@+id/et_id"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_52"
                    android:background="@drawable/edt_bg_un_selected"
                    android:drawableRight="@mipmap/down_arrow"
                    android:paddingLeft="0dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#717171"
                    android:textSize="17sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_nationality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/til_id"
                android:layout_marginTop="18dp"
                android:hint="Nationality"
                android:visibility="gone"
                app:hintTextAppearance="@style/box">

                <com.home.glx.uwallet.tools.ChangeLineEdittext
                    android:id="@+id/et_nationality"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_52"
                    android:background="@drawable/edt_bg_un_selected"
                    android:drawableRight="@mipmap/down_arrow"
                    android:paddingLeft="0dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#717171"
                    android:textSize="17sp" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_id_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/til_nationality"
                android:layout_marginTop="18dp"
                android:hint="ID No."
                android:visibility="gone"
                app:hintTextAppearance="@style/box">

                <com.home.glx.uwallet.tools.ChangeLineEdittext
                    android:id="@+id/et_id_number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_52"

                    android:background="@drawable/edt_bg_un_selected"
                    android:paddingLeft="0dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#717171"
                    android:textSize="17sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/til_nationality"
                android:layout_marginTop="18dp"
                android:hint="ID No."
                android:visibility="gone"
                app:hintTextAppearance="@style/box">

                <com.home.glx.uwallet.tools.ChangeLineEdittext
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_52"

                    android:background="@drawable/edt_bg_un_selected"
                    android:paddingLeft="0dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#717171"
                    android:textSize="17sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/til_nationality"
                android:layout_marginTop="18dp"
                android:hint="ID No."
                android:visibility="gone"
                app:hintTextAppearance="@style/box">

                <com.home.glx.uwallet.tools.ChangeLineEdittext
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_52"

                    android:background="@drawable/edt_bg_un_selected"
                    android:paddingLeft="0dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#717171"
                    android:textSize="17sp" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_id_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/til_id_number"
                android:layout_marginTop="18dp"
                android:hint="State of issurance"

                android:visibility="gone"
                app:hintTextAppearance="@style/box">

                <com.home.glx.uwallet.tools.ChangeLineEdittext
                    android:id="@+id/et_id_state"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_52"
                    android:background="@drawable/edt_bg_un_selected"
                    android:drawableRight="@mipmap/down_arrow"
                    android:paddingLeft="0dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#717171"
                    android:textSize="17sp" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_medicare_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/til_id_state"
                android:layout_marginTop="18dp"

                android:hint="Medicare type"
                android:visibility="gone"
                app:hintTextAppearance="@style/box">

                <com.home.glx.uwallet.tools.ChangeLineEdittext
                    android:id="@+id/id_medicare_type"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_52"
                    android:background="@drawable/edt_bg_un_selected"
                    android:drawableRight="@mipmap/down_arrow"
                    android:paddingLeft="0dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#717171"
                    android:textSize="17sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/type_image"
                android:layout_width="45dp"
                android:layout_height="27dp"
                android:layout_alignTop="@+id/til_medicare_type"
                android:layout_alignBottom="@+id/til_medicare_type"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:visibility="gone" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_reference_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/til_medicare_type"
                android:layout_marginTop="18dp"
                android:hint="Personal reference number"
                android:visibility="gone"
                app:hintTextAppearance="@style/box">

                <com.home.glx.uwallet.tools.ChangeLineEdittext
                    android:id="@+id/id_reference_number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_52"
                    android:background="@drawable/edt_bg_un_selected"
                    android:inputType="number"
                    android:maxLength="3"
                    android:paddingLeft="0dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#717171"
                    android:textSize="17sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/til_reference_number"
                android:layout_marginTop="18dp"
                android:hint="Date of expiry"
                android:visibility="gone"

                app:hintTextAppearance="@style/box">

                <com.home.glx.uwallet.tools.ChangeLineEdittext
                    android:id="@+id/id_date"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_52"
                    android:background="@drawable/edt_bg_un_selected"
                    android:drawableRight="@mipmap/down_arrow"
                    android:paddingLeft="0dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#717171"
                    android:textSize="17sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_53"
                android:layout_alignParentBottom="true">

                <Button
                    android:id="@+id/btn_get_code"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_53"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/btn_hui_jianbian"
                    android:gravity="center"
                    android:text="Next"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </RelativeLayout>

        </RelativeLayout>
    </com.home.glx.uwallet.selfview.DampingReboundNestedScrollView>
</RelativeLayout>