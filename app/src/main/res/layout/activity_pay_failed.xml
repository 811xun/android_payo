<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.PayFailedActivity">
    <ImageView
        android:id="@+id/close"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:src="@mipmap/close_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="center" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment failed"
        android:textSize="26sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/close"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_16"/>

    <TextView
        android:id="@+id/msg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=""
        android:ellipsize="end"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:paddingBottom="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_120"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="@dimen/dp_15"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_34"/>
    <TextView
        android:visibility="gone"
        android:layout_width="@dimen/dp_313"
        android:layout_height="@dimen/dp_85"
        android:id="@+id/next"
        android:layout_marginTop="@dimen/dp_80"
        android:background="@mipmap/btn_orange_img"
        android:text="Done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/change_card"
        android:layout_width="@dimen/dp_343"
        android:layout_height="@dimen/dp_64"
        android:layout_marginBottom="@dimen/dp_60"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_6"
        android:background="@drawable/view_btn_4orange"
        android:gravity="center"
        android:text="Try a different card"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17" />

    <TextView
        android:visibility="gone"
        android:id="@+id/pay_ins"
        android:layout_width="@dimen/dp_343"
        android:layout_height="@dimen/dp_64"
        android:layout_marginBottom="@dimen/dp_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/change_card"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_6"
        android:background="@drawable/view_btn_4orange"
        android:gravity="center"
        android:text="Pay in 4 with Payo"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17" />
</androidx.constraintlayout.widget.ConstraintLayout>