<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_18"
        android:hint="ID type"
        app:hintTextAppearance="@style/box">

        <com.home.glx.uwallet.tools.ChangeLineEdittext
            android:id="@+id/number_edit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:background="@drawable/edt_bg_un_selected"
            android:paddingLeft="0dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textColor="@android:color/black"
            android:textColorHint="#717171"
            android:textSize="17sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView

        android:id="@+id/captcha_img"
        android:layout_width="@dimen/dp_75"
        android:layout_height="@dimen/dp_28"
        android:layout_alignBottom="@+id/til_id"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/dp_5"
        android:scaleType="centerCrop"
        android:src="@mipmap/illion_default_icon"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/select_ll"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_id1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_18"
            android:hint="ID type"
            app:hintTextAppearance="@style/box">

            <com.home.glx.uwallet.tools.ChangeLineEdittext
                android:id="@+id/number_edit1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_52"
                android:background="@drawable/edt_bg_un_selected"
                android:drawableRight="@mipmap/go_orange"
                android:paddingLeft="0dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textColor="@android:color/black"
                android:textColorHint="#717171"
                android:textSize="17sp" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</RelativeLayout>