<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/header"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_13"
        android:layout_marginBottom="@dimen/dp_9"
        android:textColor="#9393AA"/>

    <LinearLayout
        android:id="@+id/edit_ll"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/view_yj_m8hui"
        android:orientation="vertical">
        <EditText
            android:id="@+id/number_edit"
            android:visibility="gone"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_marginRight="@dimen/dp_6"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:background="@null"
            android:hint=""
            android:maxLines="1"
            android:textColor="#272755"
            android:textSize="@dimen/sp_15" />
        <LinearLayout
            android:id="@+id/select_ll"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/select"
                android:visibility="visible"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_48"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="#272755"
                android:textSize="@dimen/sp_15"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/go_orange"/>
        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBackGround" />
    </LinearLayout>

    <TextView
        android:id="@+id/instructions"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="#9393AA"/>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/id_content_lay"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/id_password_lay"
            android:layout_marginHorizontal="-7dp"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/pass_txt"
        android:visibility="gone"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_200"
        android:layout_marginLeft="@dimen/dp_8"
        android:background="@drawable/view_8gray"/>

    <EditText
        android:id="@+id/pass_edit"
        android:visibility="gone"
        android:inputType="textPassword"
        android:textColor="#272755"
        android:gravity="center"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_200"
        android:layout_marginLeft="@dimen/dp_8"
        android:background="@drawable/view_yj_m8hui"/>
</LinearLayout>