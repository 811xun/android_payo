<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RepaySelectResultActivity">
    <com.home.glx.uwallet.selfview.DampingReboundNestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true"
        android:fadingEdge="none">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/dp_16">
            <RelativeLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                app:layout_constraintTop_toTopOf="parent"
                android:background="#FFEE5C">
                <TextView
                    android:id="@+id/pay_success_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_18"
                    android:text="Payment processing"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"/>

                <ImageView
                    android:id="@+id/share_img"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_48"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:scaleType="center"
                    android:src="@mipmap/result_share_icon"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/top">
                <LinearLayout
                    android:paddingHorizontal="30dp"
                    android:layout_marginTop="37dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/receiver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Receiver"
                        android:textSize="14sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/merchant_name"
                        android:gravity="right"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:text=""
                        android:textSize="14sp"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:paddingHorizontal="30dp"
                    android:layout_marginTop="37dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/payment_method"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payment Methods"
                        android:textSize="14sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/card_type"
                        android:gravity="right"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:text="Payo instalment"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/order_amount_ll"
                    android:paddingHorizontal="30dp"
                    android:layout_marginTop="37dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/order_mount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Instalment amount"
                        android:textSize="14sp"
                        android:textColor="@color/colorBackGround"/>
                    <TextView
                        android:id="@+id/order_amount"
                        android:gravity="right"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:text=""
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/colorBackGround"/>
                </LinearLayout>

                <LinearLayout
                    android:paddingHorizontal="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/trans_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transaction Fee"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/pay_text_gray"/>
                    <TextView
                        android:id="@+id/fee_amount"
                        android:gravity="right"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:text=""
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lete_fee_ll"
                    android:paddingHorizontal="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/la_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Late fee"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/pay_text_gray"/>
                    <TextView
                        android:id="@+id/late_amount"
                        android:gravity="right"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:text=""
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:paddingHorizontal="30dp"
                    android:layout_marginTop="37dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Date"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/time"
                        android:gravity="right"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:text=""
                        android:textSize="14sp"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:paddingHorizontal="30dp"
                    android:layout_marginTop="37dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/order_no"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Order No."
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/transition_no"
                        android:gravity="right"
                        android:layout_gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:text=""
                        android:textSize="12sp"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <TextView
                    android:layout_marginTop="37dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"
                    android:background="#CACED5"/>

                <LinearLayout
                    android:paddingHorizontal="30dp"
                    android:layout_marginTop="39dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/total_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total paid"
                        android:textSize="@dimen/sp_20"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/true_money"
                        android:gravity="right"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:text=""
                        android:textSize="@dimen/sp_22"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <TextView
                    app:layout_constraintTop_toBottomOf="@+id/total"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/done"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_width="@dimen/dp_313"
                    android:background="@mipmap/btn_orange_img"
                    android:layout_height="@dimen/dp_85"
                    android:text="Done"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_20"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.home.glx.uwallet.selfview.DampingReboundNestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>