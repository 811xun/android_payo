<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.ConfirmPayNextActivity">
    <ImageView
        android:id="@+id/back"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="center"
        android:src="@mipmap/back_b"
        android:padding="@dimen/dp_5" />

    <TextView
        android:id="@+id/merchant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:textSize="26sp"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@+id/back"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ins_cl"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_39"
        app:layout_constraintTop_toBottomOf="@+id/merchant_name"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay later, pay in 4"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_17"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="@dimen/dp_16"/>

        <LinearLayout
            android:id="@+id/order_amount_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_26"
            app:layout_constraintTop_toBottomOf="@+id/title"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/order_amount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due today"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/order_amount"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/donate_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_26"
            app:layout_constraintTop_toBottomOf="@+id/order_amount_ll"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/donate_amount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donation"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/donate_amount"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tip_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_26"
            app:layout_constraintTop_toBottomOf="@+id/donate_ll"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tip_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tip"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tip_amount"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fee_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_25"
            app:layout_constraintTop_toBottomOf="@+id/tip_ll"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/fee_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction fee"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/fee_amount"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CACED5"
            android:layout_marginTop="@dimen/dp_23"
            app:layout_constraintTop_toBottomOf="@+id/fee_ll"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_25"
            app:layout_constraintTop_toBottomOf="@+id/line"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/all_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due today"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/all_amount"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_cl"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_39"
        app:layout_constraintTop_toBottomOf="@+id/merchant_name"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay in full"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_17"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="@dimen/dp_16"/>

        <LinearLayout
            android:id="@+id/card_amount_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_26"
            app:layout_constraintTop_toBottomOf="@+id/card_title"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/card_amount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order amount"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/card_amount"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pocket_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_25"
            app:layout_constraintTop_toBottomOf="@+id/card_amount_ll"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/pocket_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payo money"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/pocket_amount"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/discount_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_26"
            app:layout_constraintTop_toBottomOf="@+id/pocket_ll"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/discount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discount"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/discount_amount"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/card_donate_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_26"
            app:layout_constraintTop_toBottomOf="@+id/discount_ll"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/card_donate_amount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donation"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/card_donate_amount"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/card_tip_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_26"
            app:layout_constraintTop_toBottomOf="@+id/card_donate_ll"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/card_tip_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tip"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/card_tip_amount"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/card_fee_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_25"
            app:layout_constraintTop_toBottomOf="@+id/card_tip_ll"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/card_fee_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction fee"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/card_fee_amount"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/card_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CACED5"
            android:layout_marginTop="@dimen/dp_23"
            app:layout_constraintTop_toBottomOf="@+id/card_fee_ll"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_25"
            app:layout_constraintTop_toBottomOf="@+id/card_line"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/card_all_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total amount"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/card_all_amount"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:layout_width="@dimen/dp_302"
        android:layout_height="@dimen/dp_85"
        android:id="@+id/next"
        android:layout_marginTop="@dimen/dp_80"
        android:background="@mipmap/btn_green_img"
        android:paddingHorizontal="@dimen/dp_20"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20"/>
</androidx.constraintlayout.widget.ConstraintLayout>