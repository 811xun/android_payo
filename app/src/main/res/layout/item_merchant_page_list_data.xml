<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/top_tv"
        android:visibility="gone"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="6dp"/>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal"
    app:cardElevation="0dp"
    app:cardCornerRadius="8dp">
    <LinearLayout
        android:id="@+id/id_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
<!--        <androidx.cardview.widget.CardView
            android:id="@+id/item_cardview"
            android:layout_width="match_parent"
            android:layout_height="174dp"
            app:cardCornerRadius="18dp">-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/id_item_img_bg"
                    android:layout_width="match_parent"
                    android:layout_height="174dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="8dp">
                <ImageView
                    android:id="@+id/id_item_img"
                    android:layout_width="match_parent"
                    android:layout_height="174dp"
                    android:src="@mipmap/loading_img"
                    android:layout_gravity="center_vertical"
                    android:scaleType="center" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/id_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="13dp"
                    android:background="@drawable/view_yj_121white"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text=""
                    android:maxLines="1"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:textColor="@color/text_orange"
                    android:textSize="18sp" />

            </RelativeLayout>
<!--        </androidx.cardview.widget.CardView>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingBottom="1dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/id_merchant_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_black"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/wholesale_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:paddingHorizontal="7dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="Limited offer"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:background="@drawable/view_yj136orange"/>
            </LinearLayout>
            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="#5B5B5E"
                android:singleLine="true"
                android:text=""
                android:textSize="15sp"/>

            <com.home.glx.uwallet.selfview.WordWrapView
                android:layout_marginLeft="-8dp"
                android:layout_marginTop="-4dp"
                android:id="@+id/id_popular_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>

</LinearLayout>